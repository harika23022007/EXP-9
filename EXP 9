package LowStockAlert;
import java.io.*;

public class LowStockAlert {
    public static void main(String[] args) {
        // Step 1: File paths (relative to project folder)
        String inputFile = "inventory.txt";
        String outputFile = "low_stock_alert.txt";

        try {
            // Step 2: Locate file in the same folder as your .java file
            File file = new File(inputFile);

            // Check if file exists
            if (!file.exists()) {
                System.out.println("⚠️ Input file not found. Creating default inventory.txt...");
                createSampleFile(file); // Create sample data automatically
            }

            // Step 3: Read the file
            BufferedReader reader = new BufferedReader(new FileReader(file));
            BufferedWriter writer = new BufferedWriter(new FileWriter(outputFile));

            writer.write("=== LOW STOCK ALERT REPORT ===\n");
            writer.write(String.format("%-15s %-10s %-10s\n", "Product", "Stock", "Price"));
            writer.write("----------------------------------------\n");

            String line;
            while ((line = reader.readLine()) != null) {
                String[] parts = line.split(",");
                if (parts.length == 3) {
                    String productName = parts[0].trim();
                    int stock = Integer.parseInt(parts[1].trim());
                    double price = Double.parseDouble(parts[2].trim());

                    if (stock < 5) {
                        writer.write(String.format("%-15s %-10d %-10.2f\n", productName, stock, price));
                    }
                }
            }

            reader.close();
            writer.close();

            System.out.println("✅ Low stock report successfully generated in: " + outputFile);

        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    // Helper method to create a sample inventory file if missing
    private static void createSampleFile(File file) {
        try (BufferedWriter writer = new BufferedWriter(new FileWriter(file))) {
            writer.write("USB Cable,3,199\n");
            writer.write("Laptop,12,72000\n");
            writer.write("Mouse,1,450\n");
            writer.write("Tab,3,25000\n");
        } catch (IOException e) {
            System.out.println("❌ Error creating sample file: " + e.getMessage());
        }
    }
}
